<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="placekeeper.commit.com.placekeeper.dto.NewCategory">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_new_category" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@android:color/holo_green_light"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <EditText
        android:id="@+id/categoryName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="350px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nazwa"
        tools:layout_editor_absoluteX="114dp" />

    <Button
        android:id="@+id/randomColor"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-300px"
        android:width="150px"
        android:text="Losuj kolor"
        tools:layout_editor_absoluteX="170dp" />

    <ImageView
        android:id="@+id/colorCheck"
        android:layout_width="55dp"
        android:layout_marginLeft="400px"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="#229999"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="181dp" />

</android.support.design.widget.CoordinatorLayout>
