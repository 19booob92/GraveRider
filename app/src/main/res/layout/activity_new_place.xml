<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="placekeeper.commit.com.placekeeper.CategoriesActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/newCategory"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@android:color/holo_green_light"
        app:elevation="0dp"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="495dp" />

    <Button
        android:id="@+id/friends_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="150px"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:text="Znajomi"
        android:textSize="30sp" />

    <Button
        android:id="@+id/graves_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="375px"
        android:background="@android:color/holo_orange_dark"
        android:clickable="true"
        android:text="Groby"
        android:textSize="30sp" />

    <Button
        android:id="@+id/parking_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="600px"
        android:background="@android:color/darker_gray"
        android:clickable="true"
        android:text="Parkingi"
        android:textSize="30sp" />

</android.support.design.widget.CoordinatorLayout>
